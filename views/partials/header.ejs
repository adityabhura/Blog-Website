<html>
    <head>
        <title>Blog App</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css">
        <link rel="stylesheet" href="/app.css">
    </head>
    <body>
        <div>
        <div class="ui fixed inverted menu">
            <div class="ui continer">
                <div class="header item"><i class="pen square icon"></i>Kalam</div>
            </div>
            <a href="/" class="item">Home</a>
            <a href="/blogs/new" class="item">New Blog</a>
          <%  if(!currentUser){ %>
            <a href="/register"class="item">Register</a>
            <a href="/login"class="item">Login</a>
           <% }else{ %>
            <a href="/logout"class="item">Logout</a>
            <a href="#" class="item">Loged in as <%= currentUser.username %></a>
            <% } %>
        </div>
    
<% if(success && success.length>0){ %>
    <div class="ui continer" id="flash">
        <div class="ui postive message">
            <div class="header">
                <%= success %>
            </div>
            
        </div>
    </div>
<% } %>
  
<% if(error && error.length>0){ %>
    <div class="ui continer" id="flash">
        <div class="ui warning message">
            <div class="header">
                <%= error %>
            </div>
        </div>
    </div>   
<% } %> 